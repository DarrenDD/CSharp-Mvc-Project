@model IEnumerable<SpringOceanTechnologiesIMS.Entities.ProgrammeItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Module</h1>

<p>
    <partial name="_CreateButtonPartial" model="@ViewBag.ProgrammeId" />
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeItemReleased)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTimeItemReleased)
                </td>
                <td>
                    <partial name="_RUDButtonsPartial" model="@item.Id">

                        @if (item.ContentId == 0)
                        {
                            <a asp-controller="Content" asp-action="Create" asp-route-programmeItemId="@item.Id" asp-route-programmeId="@item.ProgrammeId">Add Content</a>
                        }
                        else
                        {
                            <a asp-controller="Content" asp-action="Edit" asp-route-programmeItemId="@item.Id" asp-route-programmeId="@item.ProgrammeId">Edit Content</a>
                        }

                </td>
            </tr>
        }
    </tbody>
</table>