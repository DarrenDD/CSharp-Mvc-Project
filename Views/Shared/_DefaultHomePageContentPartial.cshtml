@model IEnumerable<Programme>
@using SpringOceanTechnologiesIMS.Entities
@using SpringOceanTechnologiesIMS.Models

<!--Hero Section-->
<div class="hero section">
    <img class="img-fluid" src="~/Images/YouthGroup.jpg">
    <div class="hero-heading">
        <h2 class="hero-heading-text">Learn Software Engineering at a <strong>YDC near you!</strong></h2>
        <a id="HeroRegisterButton" class="btn btn-outline-info btn-lg text-light hero-register-button" data-toggle="modal" data-target="#UserRegistrationModal">Register</a>
    </div>
</div>

<hr class="section-divider" />

<!--Courses Section-->
<div id="Courses" class="courses section">
    <h3 class="section-header"><i class="fas fa-laptop-code mr-2 text-info"></i>Courses</h3>
    @{
        const int itemsPerRow = 4;

        var count = Model.Count() / itemsPerRow;
        var progList = new List<Programme>();

    }
    @for (int i = 0; i <= count; i++)
    {
        progList = Model.Skip(i * itemsPerRow).Take(itemsPerRow).ToList();

        <partial name="_DisplayCardRowPartial" model="progList" />

    }
</div>

<hr class="section-divider" />

<!--Contact Us Section-->

<div id="ContactUs" class="contact-us section">
    <h3 class="col-md-5 section-header"><i class="fas fa-phone-alt mr-2 text-info"></i>Contact Us</h3>
    <div class="col-md-5">
        Email us any questions or inquiries or call 084 568 4989. We would be happy to answer your questions and set up a meeting with you.
    </div>
    <div class="mt-3">
        <div class="col-md-8">
            <form>
                <input type="hidden" />
                <div class="form-group">
                    <label for="Name" class="control-label">Name: </label>
                    <input id="Name" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="Email" class="control-label">Email: </label>
                    <input id="Email" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="Subject" class="control-label">Subject: </label>
                    <input id="Subject" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="MessageBody" class="control-label">Message: </label>
                    <textarea id="Messagebody" cols="30" rows="10" class="form-control"></textarea>

                </div>
                <div class="form-group d-flex">
                    <input type="button" value="Send Email" class="btn btn-outline-info ml-auto" />
                </div>
            </form>
        </div>
    </div>
</div>
<hr class="section-divider" />

<!--About Us Section-->

<div id="AboutUs" class="about-us section">
    <h3 class="col-md-5 section-header"><i class="fas fa-chalkboard-teacher mr-2 text-info"></i>About Us</h3>
    <div class="mt-3 mb-5">
        <div class="col-md-10">
            <p>
                <strong>YDC</strong> The main objective of this assignment is to design, develop and operationalise a web-based MIS system with database application that will assist its users (administrators and global clients) to send,
                access, analyse, process, and convert data into useful information using various search, sort, filter, and rank queries accessible both on local intranet and internet.
                The specific objectives of this assignment are:
                • To develop and establish fully functional computer based MIS covering ECDs, Regional, District and Provincial Department of Social Development information needs.
                • To design and develop web-based /standalone / hand-held mobile database application for online data entry and inquiry.
                • To ensure flexibility in database design to adapt/accept the changes in data that may be required in future management.
            </p>
        </div>
    </div>
</div>