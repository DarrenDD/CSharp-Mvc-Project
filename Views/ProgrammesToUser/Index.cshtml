@model SpringOceanTechnologiesIMS.Models.ProgrammesToUserModel 
@using SpringOceanTechnologiesIMS.Comparers

div class="row mt-5">
<div class="col-md-10">
    <h2>Choose your Courses</h2>
</div>

<form asp-action="Index">
    <div class="row mt-3">
        <div class="col-md-10">
            <table class="table table-bordered">
                @if (Model != null)
                {
                    <thead>
                        <tr>
                            <th></th>
                            <th>Courses</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var programme in Model.Programmes)
                        {
                            <tr>
                                <td style="text-align:center; width:150px;">
                                    @if (Model.ProgrammesSelected != null && Model.ProgrammesSelected.Contains(programme, new CompareProgrammes()))
                                    {
                                        <input type="checkbox" class="form-check-input" id="ProgrammesSelected" name="ProgrammesSelected" checked value="@programme.Id">
                                    }
                                    else
                                    {
                                        <input type="checkbox" class="form-check-input" id="ProgrammesSelected" name="ProgrammesSelected" value="@programme.Id">

                                    }
                                </td>
                                <td>@programme.Title</td>
                            </tr>
                        }
                    </tbody>
                }
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 d-flex">
            <input type="submit" value="Save" class="btn btn-outline-info ml-auto" />
        </div>
    </div>
</form>